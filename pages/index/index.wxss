/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 5%;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}


.login {
  display: flex;
  flex-direction: column;
  padding: 40rpx;
  line-height: 40px;
}

.outline {
  outline: solid;
  outline-color: beige;
  outline-style: inset;
  outline-width: 1px;
}
.hide{
  visibility:hidden;
}